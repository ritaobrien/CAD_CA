
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6 centredisplay">
      <br />
      <p class="headingtext"><%= image_tag 'book_categoriser.png'  %></p>
      <p class="headingtext">FULL CATALOGUE</p>
      <br /><br />
      <%= link_to "ADD NEW GENRE", new_genre_path, class: "btn btn-outline-dark btn-sm" %>
      <br /><br />
      <hr class="hr" />
      <div class="genres">
        <% @genres.each do |genre| %>
          <%= render genre %>
    
          <%= link_to "SHOW GENRE", genre, class: "btn btn-outline-dark btn-sm" %> |
          <%= link_to 'EDIT GENRE', edit_genre_path(genre), class: "btn btn-outline-dark btn-sm" %>  
          <br />
          <br />
          <%= button_to 'DELETE GENRE', genre, method: :delete, class: 'btn btn-outline-danger btn-sm' %>
          <br />
          <hr class="hr" />
           <% end %>
      </div>
    </div>
    <div class="col-lg-3">
    </div>
  </div>
</div>
