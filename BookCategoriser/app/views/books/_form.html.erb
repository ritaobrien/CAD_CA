<%= form_for([@genre, @book]) do |f| %>
  <% if @book.errors.any? %>
  <div id="error_explanation">
  <h2><%= pluralize(@book.errors.count, "error")%>
  prohibited this review from being saved:</h2>
  <ul>
  <% @book.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
  </ul>
  </div>
  <% end %>
  <div class="field">
  <p>
  <%= f.label :title %><br />
  <%= f.text_field :title, class: "custom-text-field" %>
  </p>
  <p>
<%= f.label :author %><br />
  <%= f.text_field :author, class: "custom-text-field" %>
  </p>
  <p>
<%= f.label :synopsis %><br />
  <%= f.text_field :synopsis, class: "custom-text-field" %>
  </p>

  </div>
  <div class="actions">
  <%= f.submit "SAVE BOOK", class: "btn btn-outline-dark btn-sm"%>
  
  </div>
  <% end %>
  
  




  