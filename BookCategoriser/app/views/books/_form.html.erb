<%= form_for([@genre, @book]) do |f| %>
  <% if @book.errors.any? %>
  <div id="error_explanation">
  <h2><%= pluralize(@book.errors.count, "error")%>
  prohibited this review from being saved:</h2>
  <ul>
  <% @book.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
  </ul>
  </div>
  <% end %>
  <div class="field">
  <p>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class: "custom-text-field" %>
  </div>

  <br />

  <div class="field">
    <%= f.label :author %>
    <%= f.text_field :author, class: "custom-text-field" %>
  </div>

  <br />

  <div class="field">
    <%= f.label :synopsis %>
    <%= f.text_area :synopsis, class: "custom-text-field" %>
  </div>

  <br />
  <div class="actions">
    <%= f.submit "SAVE", class: "btn btn-outline-dark btn-sm" %>
  </div>
  </p>
  </div>
  
  <% end %>
  
  




  